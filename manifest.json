{
  "manifest_version": 3,
  "name": "EnorEtt",
  "version": "1.0.0",
  "description": "Din svenska grammatikassistent - Kolla snabbt om ett ord tar 'en' eller 'ett'. Your Swedish grammar helper.",
  "author": "EnorEtt Team",
  
  "icons": {
    "16": "icons/icon-16.svg",
    "48": "icons/icon-48.svg",
    "128": "icons/icon-128.svg"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.svg",
      "48": "icons/icon-48.svg",
      "128": "icons/icon-128.svg"
    },
    "default_title": "EnorEtt - Kolla en/ett"
  },
  
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "permissions": [
    "contextMenus",
    "storage"
  ],
  
  "host_permissions": [],
  
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Ã–ppna EnorEtt popup"
    }
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*.svg"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "homepage_url": "https://github.com/yourusername/enorett",
  
  "offline_enabled": true
}
